{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "include": [
      "app/**/*.js",
      "app/**/*.ts",
      "app/**/*.jsx",
      "app/**/*.tsx",
      "components/**/*.js",
      "components/**/*.ts",
      "components/**/*.jsx",
      "components/**/*.tsx"
    ],
    "ignore": []
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 140
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "ignore": ["components/ui"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
